<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiGeneratorRGBColor.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <BoxView x:Name="boxview_color"
                WidthRequest="200"
                HeightRequest="200"
                CornerRadius="20"/>
            <Slider x:Name="slider_r" Minimum="0" Maximum="255" Background="Red"></Slider>
            <Slider x:Name="slider_g" Minimum="0" Maximum="255" Background="Green"></Slider>
            <Slider x:Name="slider_b" Minimum="0" Maximum="255" Background="Blue"></Slider>

            <Button x:Name="buRandomColor" Text="Случайный цвет"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
