<Window x:Class="wpfStyleLocal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfStyleLocal"
        mc:Ignorable="d"
        Title="wpfStyleLocal" Height="450" Width="300">
    <StackPanel>
        <StackPanel.Style>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="10"/>
            </Style>
        </StackPanel.Style>
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Height" Value="40"/>
            </Style>
        </StackPanel.Resources>
        <Button Content="Кнопка 1"/>
        <Button Content="Кнопка 2"/>
        <Button Content="Кнопка 3"/>
        <Button Content="Кнопка 4"/>
        <Button Content="Кнопка 5">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="LightGreen"/>
                </Style>
            </Button.Style>
        </Button>
    </StackPanel>
</Window>
