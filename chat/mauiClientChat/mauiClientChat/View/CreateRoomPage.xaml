<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiClientChat.CreateRoomPage"
             Title="CreateRoomPage">
    <VerticalStackLayout Padding="40" BackgroundColor="#483D8B">
        <Label
            FontSize="Micro"
            Margin="0, 0, 0, 5"
            Text="Введите имя комнаты:"/>
        <Entry
            Placeholder="Комната 1"
            x:Name="ent_RoomName"/>
        <Button
            x:Name="btn_CreateRoom"
            TextColor="Black"
            BackgroundColor="White"
            FontSize="Default"
            Margin="0,40,0,0"
            Text="Создать беседу"/>
    </VerticalStackLayout>
</ContentPage>