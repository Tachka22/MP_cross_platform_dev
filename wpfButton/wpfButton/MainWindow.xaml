<Window x:Class="wpfButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfButton"
        mc:Ignorable="d"
        Title="wpfButton" Height="450" Width="800">
    <StackPanel>
        <Button Content="Button" Click="Button_Click"/>
        <Button Content="RepeatButton" Click="RepeatButton_Click"/>
        <RepeatButton Content="ToggleButton" Click="ToggleButton_Click"/>
        <ListBox x:Name="LbBox" "></ListBox>
    </StackPanel>
</Window>
